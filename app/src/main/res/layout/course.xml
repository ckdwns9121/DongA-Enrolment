<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTest"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courseName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="과목명"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/courseProfessor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="교수명"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courseGrade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="학년"
                android:textColor="@color/colorTest"
                android:textSize="12.5sp" />

            <TextView
                android:id="@+id/courseCredit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="학점"
                android:textColor="@color/colorTest"
                android:textSize="12.5sp" />

            <TextView
                android:id="@+id/courseDivision"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="이수구분"
                android:textColor="@color/colorTest"
                android:textSize="12.5sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/courseTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="강의시간"
                android:textColor="@color/colorTest"
                android:textSize="12.5sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/courseNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="과목코드"
                    android:textColor="@color/colorTest"
                    android:textSize="12.5sp" />

                <TextView
                    android:id="@+id/courseClass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="분반"
                    android:textColor="@color/colorTest"
                    android:textSize="12.5sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/courseLimit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="강의제한인원"
                android:textColor="#36C200"
                android:textSize="12.5sp" />

        </LinearLayout>

    </LinearLayout>

    <!--<CheckBox-->
        <!--android:id="@android:id/checkbox"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:textAppearance="?android:attr/textAppearanceListItemSmall"-->
        <!--android:gravity="center"-->
        <!--android:layout_weight="9"-->
        <!--android:checkMark="?android:attr/listChoiceIndicatorMultiple"-->
        <!--/>-->
    <Button
        android:id="@+id/addButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5.5dp"
        android:layout_weight="4"
        android:background="#FC70A3"
        android:text="추가"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

</LinearLayout>

